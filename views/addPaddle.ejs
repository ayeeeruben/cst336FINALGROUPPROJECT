<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Paddle</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <%- include("partials/navbar.ejs") %>

  <div class="container my-5">
    <h1 class="text-center mb-4">Add a New Paddle</h1>

    <form action="/addPaddleProcess" method="POST" class="row g-3">
      <!-- Paddle Name -->
      <div class="col-md-6">
        <label for="paddleName" class="form-label">Paddle Name</label>
        <input type="text" class="form-control" id="paddleName" name="paddleName" required>
      </div>

      <!-- Paddle Image URL -->
      <div class="col-md-6">
        <label for="paddleImg" class="form-label">Image URL</label>
        <input type="text" class="form-control" id="paddleImg" name="paddleImg" required>
      </div>

      <!-- Retail Price -->
      <div class="col-md-6">
        <label for="retailPrice" class="form-label">Retail Price</label>
        <input type="number" step="0.01" class="form-control" id="retailPrice" name="retailPrice" required>
      </div>

      <!-- Discounted Price -->
      <div class="col-md-6">
        <label for="paddlePrice" class="form-label">Discounted Price</label>
        <input type="number" step="0.01" class="form-control" id="paddlePrice" name="paddlePrice" required>
      </div>

      <!-- Surface Material -->
      <div class="col-md-6">
        <label for="surfaceMaterial" class="form-label">Surface Material</label>
        <input type="text" class="form-control" id="surfaceMaterial" name="surfaceMaterial">
      </div>

      <!-- Static Weight -->
      <div class="col-md-6">
        <label for="staticWeight" class="form-label">Static Weight</label>
        <input type="text" class="form-control" id="staticWeight" name="staticWeight">
      </div>

      <!-- Discount Code -->
      <div class="col-md-6">
        <label for="discountCode" class="form-label">Discount Code</label>
        <input type="text" class="form-control" id="discountCode" name="discountCode">
      </div>


      <!-- Submit Button -->
      <div class="col-12 text-center">
        <button type="submit" class="btn btn-success">Add Paddle</button>
      </div>
    </form>
  </div>

  <%- include("partials/footer.ejs") %>
</body>
</html>
