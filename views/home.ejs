<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Home</title>
    <style>
        .iframe-container {
            margin: 20px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            max-width: 1200px;
        }
        
        .iframe-container iframe {
            width: 100%;
            height: 700px;
            border: none;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <h1> Pickleball News! </h1>
    <p>Current time in California: <span id="api-time">Loading...</span></p>

    <script>
        fetch('https://worldtimeapi.org/api/timezone/America/Los_Angeles')
            .then(res => res.json())
            .then(data => {
                const time = new Date(data.datetime).toLocaleString();
                document.getElementById('api-time').textContent = time;
            })
            .catch(err => {
                document.getElementById('api-time').textContent = 'Unable to fetch time';
                console.error('Time API error:', err);
            });
    </script>
    
    <%- include("partials/navbar.ejs") %>

    <div class="iframe-container">
        <h2>Major Pickleball News</h2>
        <iframe src="https://pickleball.com/" title="Major Pickleball News"></iframe>
    </div>

    <%- include("partials/footer.ejs") %>

</body>
</html>