<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Home</title>
</head>
<body>
    <header class="title-container">
    <h1 class="site-title">PickleHub</h1>
    <p class="subtitle">Your Interactive Pickleball Hub</p>
    </header>
    
    <p>Current time in California: <span id="api-time">Loading...</span></p>

    <script>
        fetch('https://worldtimeapi.org/api/timezone/America/Los_Angeles')
            .then(res => res.json())
            .then(data => {
                const time = new Date(data.datetime).toLocaleString();
                document.getElementById('api-time').textContent = time;
            })
            .catch(err => {
                document.getElementById('api-time').textContent = 'Unable to fetch time';
                console.error('Time API error:', err);
            });
    </script>
    
    <%- include("partials/navbar.ejs") %>
        <div class="news-container">
        <h2>Major Pickleball News</h2>
        <iframe class="news-iframe" src="https://ppatour.com/news/" title="PPA Tour News"></iframe>
    </div>
    <%- include("partials/news.ejs") %>
    
    <script src="/js/news.js"></script>
    <%- include("partials/footer.ejs") %>

</body>
</html>